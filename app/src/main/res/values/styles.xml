<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#81D4FA</item>
        <item name="colorPrimaryDark">#29B6F6</item>
        <item name="colorAccent">#FFF59D</item>
        <item name="android:textColor">#000</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:screenOrientation">portrait</item>
    </style>


    <style name="Lebanon" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#ff9800</item>
        <item name="colorPrimaryDark">#e65100</item>
        <item name="colorAccent">#dd2c00</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@android:color/background_light</item>

    </style>

    <style name="BBCTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#b53f41</item>
        <item name="colorPrimaryDark">#9f3037</item>
        <item name="colorAccent">#0030b5</item>
        <item name="android:textColor">#000</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:screenOrientation">portrait</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="Lebanon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Lebanon.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
